<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="5"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/paymentMethodTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Cards"
            />

        <TextView
            android:id="@+id/brandsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="visa,mastercard,amex"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="3"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/labelLabelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Label"
            />

        <TextView
            android:id="@+id/labelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            tools:text="Long loooooong label"
            />
    </LinearLayout>

    <Button
        android:id="@+id/deleteItemButton"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="48dp"
        android:layout_height="36dp"
        android:background="?selectableItemBackgroundBorderless"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/ic_baseline_delete_outline"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        />

</LinearLayout>