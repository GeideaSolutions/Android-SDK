<?xml version="1.0" encoding="utf-8"?>
<net.geidea.paymentsdk.internal.ui.widget.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/gd_selector_outline_rounded2"
    android:layoutDirection="inherit"
    android:orientation="horizontal"
    android:paddingHorizontal="8dp"
    >

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="1"
        android:buttonTint="?attr/colorPrimary"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:paddingStart="4dp"
        tools:text="Credit / Debit card"
        />

    <net.geidea.paymentsdk.internal.ui.widget.AspectRatioImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="14dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/gd_content_desc_payment_method_logo"
        app:gd_aspectRatioEnabled="true"
        app:gd_dominantMeasurement="height"
        tools:src="@drawable/gd_ic_valu_logo"
        />

</net.geidea.paymentsdk.internal.ui.widget.CheckableLinearLayout>